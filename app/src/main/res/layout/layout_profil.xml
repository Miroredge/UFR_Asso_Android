<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlancLight">



    <TableRow
        android:id="@+id/tableaulogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/round_corner"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        >
        <ImageButton
            android:id="@+id/Accueil_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/icon_home"
            />
        <ImageButton
            android:id="@+id/Association_Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/icon_associations"
            />
        <ImageButton
            android:id="@+id/Profile_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/icon_profile"
            />
    </TableRow>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"


        tools:srcCompat="@tools:sample/avatars" />

<TextView
    android:id="@+id/NOMPrenom"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="NOM PRENOM"
    android:layout_marginTop="180dp"
    android:gravity="center"

    />

    <ImageButton
        android:id="@+id/editBouton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/modifier_profil_logo"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/NOMPrenom"
        />

    <TextView
        android:id="@+id/link"
        android:layout_width="69dp"
        android:layout_height="30dp"

        android:autoLink="web"
        android:linksClickable="true"
        android:textColorLink="@color/black"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        />

</RelativeLayout>