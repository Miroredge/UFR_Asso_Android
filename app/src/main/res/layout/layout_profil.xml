<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlancLight">



    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="45dp"
            android:gravity="center"
            android:text="Profile"
            android:textColor="@color/black"
            >

        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/tableaulogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/round_corner"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        >
        <ImageButton
            android:id="@+id/Accueil_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/icon_home"
            />
        <ImageButton
            android:id="@+id/Association_Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/icon_associations"
            />
        <ImageButton
            android:id="@+id/Profile_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/icon_profile"
            />
    </TableRow>

    <TextView
        android:id="@+id/AucuneImage"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text=""
        android:layout_marginTop="180dp"
        />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"


        tools:srcCompat="@tools:sample/avatars" />

<TextView
    android:id="@+id/NOMPrenom"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="PSEUDO"
    android:layout_marginTop="260dp"
    android:gravity="center"
    android:textSize="12pt"

    />


    <ImageButton
        android:id="@+id/editBouton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/modifier_profil_logo"
        android:background="@drawable/bouton_arrondi"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/NOMPrenom"
        />

    <Button
        android:id="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:gravity="center"
        android:backgroundTint="@color/bleuCustomFonce"
        android:text="DISCORD" />

    <TextView
        android:id="@+id/Email_Profile_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="460dp"
        android:text="Email: caca@gmail.com"
        />

    <Button
        android:id="@+id/buttonMDP"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:gravity="center"
        android:backgroundTint="@color/bleuCustomFonce"
        android:text="Changement MDP" />

    <Button
        android:id="@+id/deconnexion"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp"
        android:gravity="center"
        android:backgroundTint="@color/Red"
        android:text="Se dÃ©connecter" />

</RelativeLayout>